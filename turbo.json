{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false
    },
    "bump": {
      "dependsOn": [],
      "outputs": ["CHANGELOG.md"]
    },
    "check-update": {
      "dependsOn": [],
      "outputs": []
    }
  }
}
